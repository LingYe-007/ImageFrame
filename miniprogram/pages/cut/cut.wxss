/* pages/cut/cut.wxss */

.top{
  position: absolute;
  width:100%;
  top:10rpx;
  display: flex;
  flex-flow:wrap;
  z-index: 10;
  color:white;
  justify-content:space-around;
}
page{
  background:rgb(14, 13, 13);
}
view{
  font-size: 30rpx;
}
.bottom{
  position: absolute;
  width:100%;
  bottom:50rpx;
  display: flex;
  z-index: 10;
  align-items: center;
  flex-wrap:wrap;
  height:100rpx;
}
.bottom .btnBox{
  display: inline-block;
  font-size:28rpx;
  z-index:2;
  height:60rpx;
  line-height:60rpx;
  width:15%;
  margin:0rpx 5%;
  text-align:center;
  color:#fff;
}
.imageBox image{
   width:40rpx;
   height:40rpx;
   
}
.btnColor{
  background:#2ba940;
}
.input{
  display: flex;
  height: 50rpx;
  width:50%;
}
.input>.label{
  min-width:150rpx;
  font-size: 30rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.input>input{
  margin-left:10rpx;
  text-align: center;
  max-width:160rpx;
  border:1px solid rgb(255, 255, 255);
  height: 50rpx;
  line-height: 50rpx;
  min-height: 50rpx;
  box-sizing: border-box;
}
@import '../../components/src/image-cropper.wxss'  